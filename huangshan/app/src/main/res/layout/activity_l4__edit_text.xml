<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_l4__edit_text"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.meepo.huangshan.UI.L4_EditText">

    <Button
        android:id="@+id/L4_btn_go"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/L4_et_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="9dp"
        android:onClick="go"
        android:text="GO！！！" />

    <EditText
        android:id="@+id/L4_et_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp"
        android:ems="10"
        android:hint="你心目中最帅的人"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/L4_et_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/L4_et_name"
        android:layout_alignStart="@+id/L4_et_name"
        android:layout_below="@+id/L4_btn_go"
        android:layout_marginTop="23dp"
        android:ems="10"
        android:hint="请输入数字"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/L4_btn_addself"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/L4_btn_go"
        android:layout_alignStart="@+id/L4_btn_go"
        android:layout_below="@+id/L4_et_number"
        android:layout_marginTop="9dp"
        android:onClick="numaddself"
        android:text="乘二" />
</RelativeLayout>
