<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_random_"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.meepo.huangshan.UI.Random_Activity">

    <TextView
        android:text="谁最小谁吃屎"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="33dp"
        android:id="@+id/ran_tv_3"
        android:textSize="36sp"
        android:layout_below="@+id/ran_tv_2"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        android:id="@+id/ran_tv_1"
        android:textSize="36sp"
        android:text="谁最小谁吃屎"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/ran_tv_2"
        android:layout_alignStart="@+id/ran_tv_2" />

    <TextView
        android:text="谁最小谁吃屎"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:id="@+id/ran_tv_2"
        android:textSize="36sp"
        android:layout_below="@+id/ran_tv_1"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="吃屎！走起！"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ran_btn_1"
        android:textSize="36sp"
        android:onClick="randonnum"
        android:textStyle="normal|bold"
        android:layout_below="@+id/ran_tv_3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="49dp" />

    <Button
        android:text="不服！重来！"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ran_btn_2"
        android:textSize="36sp"
        android:onClick="clear"
        android:textStyle="normal|bold"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="80dp" />
</RelativeLayout>
